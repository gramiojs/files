{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "skipLibCheck": true,

        "moduleDetection": "force",

        /* Bundler mode */
        "moduleResolution": "NodeNext",
        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["src"]
}
